#recent-posts
  & > .recent-post-item:not(:first-child)
    margin-top: 20px
    animation: slide-in 0.6s 0.4s backwards;
    will-change: transform;
    +maxWidth768()
      margin: 20px 20px 0
  & > .recent-post-item
    @extend .cardHover
    display: flex
    flex-direction: row
    align-items: center
    overflow: hidden
    height: 18em
    position: relative
    border-radius: 12px;
    box-shadow: none;
    transition: all 0.3s ease 0s;
    .unvisited-post 
      display: none
      color: var(--anzhiyu-secondtext);
      font-size: 0.5rem;
      if hexo-config('post_meta.post.unread') 
        display: flex
      if hexo-config('cover.index_enable') 
        position: fixed;
        if hexo-config('article_double_row') == true
          top: 245px;
          left: 32px
        else 
          left: calc(44% + 30px);
          top: 33px
        +maxWidth768()
          top: 200px;
          left: 32px;
      else 
        position: absolute;
        left: 32px;
        top: 5px;
      &:visited
        color: var(--anzhiyu-card-bg);
    .recent-post-info
      margin-top: 0px;
      position: relative;
      .newPost 
        display: flex;
        color: var(--anzhiyu-lighttext);
        font-size: 0.5rem;
        margin-right: 8px;
        top: 20px;
        left: 32px
        +maxWidth768()
          top: 2px;
        if hexo-config('cover.index_enable') 
          position: absolute;
        else 
          position: fixed;
      .article-title
        font-weight: bold;
    if hexo-config('cover.index_enable') 
      .article-meta__categories__box
        position: absolute;
        top: 15px;
        left: 11px;
        z-index: 1;
        max-width: 100%;
        display: flex;
        .article-meta__categories
          display: inline-block
          padding: 1px 6px;
          background: var(--anzhiyu-black-op);
          border-radius: 8px;
          margin-left: 4px;
          font-size: 12px;
          font-weight: 700;
          color: var(--anzhiyu-white);
          backdrop-filter: saturate(180%) blur(20px);
          -webkit-backdrop-filter: blur(20px);
          transform: translateZ(0);
          &:hover 
            background: var(--anzhiyu-main);
    else 
      .article-meta__categories__box
        display: flex;
        color: var(--anzhiyu-secondtext);
        font-size: 0.5rem;
        position: absolute;
        left: 40px;
        top: 5px;
        opacity: .8;
        .article-meta__categories
          margin-right: 8px;

    +maxWidth768()
      flex-direction: column
      height: auto
      &.lastestpost-item
        margin-top: 10px !important;

    &:hover
      img.post_bg
        filter: brightness(0.82) !important;
        transform: scale(1.03) !important
        transition: 0.3s ease-in-out;

    &.ads-wrap
      display: block !important
      height: auto !important

    .post_cover
      overflow: hidden
      width: 44%
      height: 200px;

      +maxWidth768()
        width: 100%
        height: 200px

      img.post_bg
        border-radius: 0px
        height 100%
        width 100%
        transition: all 0.6s ease 0s;
        object-fit: cover;

      &.right
        order: 1

        +maxWidth768()
          order: 0
    & >.recent-post-info
      width: 57%
      height: 174px;
      cursor: pointer;
      position: relative;
      padding: 0;
      display: inline-block;
      overflow: hidden;

      +maxWidth768()
        width: 100%
        height: 140px;
      &.no-cover
        width: 100%

        +maxWidth768()
          padding: 30px 20px

      & > .article-title
        margin: 0 !important;
        padding: 0 32px;
        position: absolute;
        top: 40px;
        @extend .limit-more-line
        color: var(--text-highlight-color)
        font-size: 1.2em
        line-height: 1.4
        transition: all .2s ease-in-out
        -webkit-line-clamp: 2 !important
        +maxWidth768()
          if hexo-config("post_meta.page.date_type") == 'both'
            -webkit-line-clamp: 1 !important;
          top: 20px
        &:hover
          color: $text-hover

      & > .article-meta-wrap
        color: $theme-meta-color
        font-size: 90%
        
        flex-direction: row-reverse;
        justify-content: space-between;
        position: absolute;
        
        padding: 0 32px;
        width 100%
        align-items: center;
        if hexo-config("post_meta.page.date_type") == 'both'
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;
          display: inline-block
          bottom: 15px;
        else 
          display: flex;
          bottom: 30px;
        .sticky-warp
          position: absolute;
          top: -90px;
          left: 32px;
          line-height: 12px
        .article-meta
          if hexo-config("post_meta.page.date_type") != 'both'
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;

        & > .post-meta-date
          color: var(--anzhiyu-fontcolor);
          font-size: .875rem;
          display: flex;
          align-items: center;
          flex-wrap: wrap;
          if hexo-config("post_meta.page.date_type") != 'both'
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
          +maxWidth500()
            font-size: 13px

        .sticky
          color: $sticky-color
          font-size: 12px;

        i
          margin: 0 4px 0 0

        .article-meta-label
          if hexo-config('post_meta.page.label')
            padding-right: 4px
          else
            display: none

        .article-meta-separator
          margin: 0 6px

        .article-meta-link
          margin: 0 4px

        if hexo-config('post_meta.page.date_format') == 'relative'
          time
            display: none

        a
          color: $theme-meta-color
          font-size: 14px
          margin-right: 4px
          span
            pointer-events: none

          &:hover
            color: $text-hover

      & > .content
        @extend .limit-more-line
        -webkit-line-clamp: 2

#topPostGroup
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 10px;
  height: 128px;
  align-content: space-between;
  width: 100%;
#home_top
  margin: 0 auto 0;
  padding: 0px 1.5rem 0px;
  max-width: 1400px;
  width: 100%;
  animation: slide-in 0.6s 0s backwards;
  // overflow: hidden;

+maxWidth768()
  #topPostGroup
    height: 240px;
  #swiper_container_blog
    padding: 10px;
  #home_top
    padding: 0px 20px 0px;
  
  
if hexo-config('home_top.swiper.enable') == true
  div#bannerGroup
      margin-right: 10px;
      width: calc(51% - 10px) !important;
  +maxWidth768()
    #home_top
      padding: 0px 15px;
    #topPostGroup 
      height: 280px;
    #swiper_container_blog
      padding: 0 10px;
  +maxWidth1200()
    div#bannerGroup {
      display: none !important;
    }

if hexo-config('article_double_row') == true
  #content-inner #recent-posts > .recent-post-item > .recent-post-info > .content
    opacity: 0;
    height: 0;
  +maxWidth1200()
    #recent-posts > .recent-post-item .unvisited-post
      top: 32px;
      left: calc(44% + 32px);
      width: 24px;
    #recent-posts > .recent-post-item&:has(.newPost) .unvisited-post
      left: calc(44% + 88px) !important;
      top: 32px;
    #recent-posts > .recent-post-item >.recent-post-info > .article-title
      line-height: 30px;
      font-weight: bold;
      color: var(--anzhiyu-fontcolor);
      width: 100%;
      transition: .3s;
      font-size: 1.2rem;
      -webkit-line-clamp: 2;
      display: -webkit-box;
      overflow: hidden;
      -webkit-box-orient: vertical;
  +maxWidth768()
    #content-inner #recent-posts > .recent-post-item > .recent-post-info > .content
      opacity: 0;
      height: 0;
    #recent-posts > .recent-post-item .unvisited-post
      left: 32px;
      top: 202px;
  +minWidth1200()
    #recent-posts
      align-content: flex-start
      display: flex
      flex-wrap: wrap
      justify-content: space-between

      &>.recent-post-item
        margin-top: 1rem
        display: flex
        height: auto
        width: 49%
        .recent-post-info
          .content
            display: none
          .article-title
            font-size: 1.72em
        .post_cover
          width: 100%
          height: 225px
          transition: 1s !important;
          
          img.post_bg
            width: 100%
            height: 100%

        -webkit-flex-direction: column
        -ms-flex-direction: column
        flex-direction: column

        .left_radius
          border-radius: 8px 8px 0 0

        .right_radius
          border-radius: 8px 8px 0 0

        height: auto !important

        .recent-post-info
          width 100%
          >.article-title
            -webkit-line-clamp: 1
            margin-top: .3rem
            margin-bottom: .3rem
            color: var(--text-highlight-color)
            font-size: 1.2em
            line-height: 1.4

    @media screen and (max-width:768px)
      #recent-posts>.recent-post-item
        width: 100%

      #recent-posts > .recent-post-item >.recent-post-info > .article-meta-wrap > .tags > .article-meta__separator
        display: none



